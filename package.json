{
	"name": "@zayesh/stay",
	"version": "0.1.0",
	"description": "Stay is a small but effective library for the creation of dynamic xhr-driven web applications.",
	"homepage": "https://github.com/vanruesc/stay",
	"main": "build/stay",
	"jsnext:main": "src/stay",
	"license": "Apache-2.0",

	"keywords": [
		"xhr",
		"xmlhttprequest",
		"ajax",
		"web application"
	],

	"author": {
		"name": "Raoul van Rueschen",
		"email": "vanruesc@fh-brandenburg.de"
	},

	"repository": {
		"type": "git",
		"url": "https://github.com/vanruesc/stay.git"
	},

	"bugs": {
		"url": "https://github.com/vanruesc/stay/issues"
	},

	"scripts": {
		"jshint:banner": "jshint banner.js",
		"jshint:test": "jshint test",
		"jshint:lib": "jshint src",
		"jshint": "npm run jshint:banner && npm run jshint:test && npm run jshint:lib",
		"browserify": "mkdirp build && browserify src/stay.js -t babelify -s Stay -o build/stay.js",
		"uglify": "uglifyjs build/stay.js -c -m -o build/stay.min.js",
		"mocha": "mocha test",
		"yuidoc": "yuidoc src -q -c yuidoc.json",
		"prebuild": "npm run jshint",
		"build": "npm run browserify",
		"postbuild": "npm run uglify && node banner.js",
		"pretest": "npm run build",
		"test": "npm run mocha"
	},

	"engines": {
		"node": ">= 0.10.0"
	},

	"dependencies": {
		"@zayesh/eventdispatcher": "x.x.x"
	},

	"devDependencies": {
		"babelify": "6.x.x",
		"browserify": "11.x.x",
		"mkdirp": "0.x.x",
		"jshint": "2.x.x",
		"mocha": "2.x.x",
		"prepend-file": "1.x.x",
		"uglify-js": "2.x.x",
		"yuidocjs": "0.x.x"
	}

}
